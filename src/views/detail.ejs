<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: '¿?'}) %>

<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<br></br><br></br><br></br><br></br><br></br><br></br></br>

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title" alt="Responsive image">Detalle del producto: <%= product.name %> </h2>
			</div>
		</div>
		<div class="product-detail">
			<div class="row">
				<div class="col-12 col-lg-8">
					<img src="/images/products/<%= product.image %>" alt="product image" class="product-detail-img">
					
					
					<p class="product-detail-description">
						<%= product.description %>
					</p>
				</div>
				<div class="col-12 col-lg-4">
					<article class="product-detail-info">
						<h2 class="product-detail-title"><%= product.name %></h2>
						
							<h3 class="product-detail-price">
								<span>$</span>
								<%= product.price %>,00
							</h3>
							
						<ul class="actions-list">
							<li>
								<i class="fas fa-credit-card"></i>
								<p>Pagá en 3 cuotas sin interes</p>
							</li>

							<li>
								<i class="fas fa-truck"></i>
								<p>Envío gratis superando los $3.500,00</p>
							</li>

							<li>
							<label for="tentacles">CANTIDAD </label>
							<input type="number" id="tentacles" name="tentacles"
								   min="1" max="10000">	
								</li>
						</ul>

						<a href="/cart" class="buy-now-button">COMPRAR AHORA</a>
						<hr>

						<h4>CONFIGURACION DE PRODUCTO</h4>
						<a href="/products/edit/<%= product.id %>"><button type="submit" class="action-button edit">EDITAR PRODUCTO</button></button></a>
						<a href="/products/delete/<%= product.id %>" ><button type="submit"class="action-button edit">ELIMINAR</button></a>
					
					</article>
				</div>
			</div>
		</div>
	</div>
	

	<!-- footer -->
	<%- include('partials/footer') %>


</body>	
</html>